@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Ekleme Sayfası</h3>

    @using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <br />
        @Html.Label("Deneyim Başlığı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })

        <br />

        <label>Tarih Bilgisi</label>
        @Html.TextBoxFor(x => x.Date, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(x => x.Date, "", new { @class = "text-danger" })

        <br />

        <label>Resim Yolu</label>
        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ImageUrl, "", new { @class = "text-danger" })

        <br />

        <label>Açıklama </label>
        @Html.TextAreaFor(x => x.Description, 10, 3, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })

        <br />

        <button class="btn btn-info">Kaydet</button>
    }
</div>
