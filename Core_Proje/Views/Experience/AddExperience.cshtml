@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_adminnewLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Deneyim Ekleme Paneli</h4>
            <p class="card-description">Lütfen bilgileri doldurun</p>
            @using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="Name">Başlık</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Başlık">
                </div>
                <div class="form-group">
                    <label for="Date">Tarih</label>
                    <input type="date" class="form-control" id="Date" name="Date">
                </div>
                <div class="form-group">
                    <label for="ImageURL">Görsel URL</label>
                    <input type="text" class="form-control" id="ImageURL" name="ImageURL" placeholder="Görsel URL">
                </div>
                <div class="form-group">
                    <label for="Description">Açıklama</label>
                    <textarea class="form-control" id="Description" name="Description" rows="6" placeholder="Açıklama"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button type="button" class="btn btn-dark">İptal</button>
            }
        </div>
    </div>
</div>








