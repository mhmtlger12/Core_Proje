@using EntityLayer.Concrete
@model List<Experience>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-header border-0">
	<h3 class="mb-0">Deyenim Listesi Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
	<table class="table align-items-center table-flush">
		<thead class="thead-light">
			<tr>
				<th scope="col" class="sort" data-sort="name">#</th>
				<th scope="col" class="sort" data-sort="budget">Başlık</th>
				<th scope="col" class="sort" data-sort="status">Tarih</th>
				<th scope="col" class="sort" data-sort="status">Açıklama</th>
				<th scope="col" class="sort" data-sort="status">Resim</th>
				<th scope="col">Sil</th>
				<th scope="col" class="sort" data-sort="completion">Düzenle</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody class="list">
			@foreach (var item in Model)
			{
				<tr>
					<th>
						@item.ExperienceID
					</th>
					<td class="budget">
						@item.Name
					</td>
					<td>
						@item.Date
					</td>

					<td style="white-space:pre-line; text-anchor:start; text-align:center">
						@item.Description
					</td>
					<td style="border-image:auto; image-resolution:snap">
						<img src="@item.ImageUrl" style="max-height:50%; max-width:50%" />
					</td>
					<form asp-action="DeleteexperienceConfirmed" asp-route-id="@item.ExperienceID" onsubmit="return confirmDelete();">
					<td> <button type="submit" class="btn btn-danger">Sil</button></td>
					</form>
					<td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-primary">Güncelle</a></td>
				</tr>
			}
		</tbody>
	</table>
	<a href="/Experience/AddExperience/" class="btn btn-success">Yeni Yetenek Ekle</a>
</div>
@* Silme işlemi için eklendi  *@
<script>
	function confirmDelete() {
		return confirm("Bu Deneyimi silmek istediğinizden emin misiniz ? ");
	}
</script>