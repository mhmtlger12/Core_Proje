@using EntityLayer.Concrete
@model List<Experience>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminnewLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimler</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ExperienceID</td>
                                <td>@item.Name</td>
                                <td>@item.Date.ToString("dd.MM.yyyy")</td>
                                <form asp-action="DeleteexperienceConfirmed" asp-route-id="@item.ExperienceID" onsubmit="return confirmDelete();">
                                <td> <button type="submit" class="btn btn-danger">Sil</button></td>
                                </form>
                                <td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-primary">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<a href="/Experience/AddExperience/" class="btn btn-success">Yeni Yetenek Ekle</a>

@* Silme işlemi için eklendi *@
<script>
    function confirmDelete() {
        return confirm("Bu Deneyimi silmek istediğinizden emin misiniz ? ");
    }
</script>
