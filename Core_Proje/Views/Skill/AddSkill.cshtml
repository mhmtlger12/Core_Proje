@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_adminnewLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Yetenek Ekleme Paneli</h4>
            <p class="card-description">Lütfen bilgileri doldurun</p>
            @using (Html.BeginForm("AddSkill", "Skill", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="Name">Başlık</label>
                   @Html.TextBoxFor(x=>x.Title,new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="Date">Değer</label>
                    @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
                </div>
                
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button type="button" class="btn btn-dark">İptal</button>
            }
        </div>
    </div>
</div>


