@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-header border-0">
	<h3 class="mb-0">Deyenim Listesi Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
	<table class="table align-items-center table-flush">
		<thead class="thead-light">
			<tr>
				<th scope="col" class="sort" data-sort="name">#</th>
				<th scope="col" class="sort" data-sort="budget">Başlık</th>
				<th scope="col">Sil</th>
				<th scope="col" class="sort" data-sort="completion">Düzenle</th>
			</tr>
		</thead>
		<tbody class="list">
			@foreach (var item in Model)
			{
				<tr>
					<th>
						@item.ServiceID
					</th>
					<td class="budget">
						@item.Title
					</td>
					<form asp-action="DeleteServiceConfirmed" asp-route-id="@item.ServiceID" onsubmit="return confirmDelete();">
					<td> <button type="submit" class="btn btn-danger">Sil</button></td>
					</form>
					<td><a href="/Service/EditService/@item.ServiceID" class="btn btn-primary">Güncelle</a></td>
				</tr>
			}
		</tbody>
	</table>
	<a href="/Service/AddService/" class="btn btn-success">Yeni Hizmet Ekle</a>
</div>
@* Silme işlemi için eklendi  *@
<script>
	function confirmDelete() {
		return confirm("Bu Deneyimi silmek istediğinizden emin misiniz ? ");
	}
</script>

